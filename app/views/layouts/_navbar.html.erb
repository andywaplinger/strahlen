<div id="nav-container">

  <% if cookies[:hide_optin].blank?  %>
       <section id="opt-in-container">
    <div>
        <div class="row">
          <div class="col-md-12 text-center">
            Get the latest updates on Strahlen!

            <%= form_for(Customer.new, :remote => true, html: {class: 'form-inline', style: 'display:inline-block; margin-left:20px'}) do |f| %>
              <div class="form-group">
                <label class="sr-only" for="exampleInputEmail2">Email address</label>
                <%= f.text_field :email, type: :email, class: 'form-control', placeholder: 'Email Address' %>
              </div>
              <button type="submit" class="btn btn-default">Sign Up</button>
            <% end %>


            <button type="button" class="close" id="close-email-input" aria-hidden="true" style="font-size: 40px">&times;</button>
          </div>
        </div>
    </div>
  </section>
  <% end %>

  <div>
    <nav class="navbar navbar-inverse navbar-default" role="navigation">
      <div class="navbar-header">
        <%= link_to(image_tag('navLogo.png', :class => 'img-responsive', :style =>'max-height:35px'), root_path, :class => 'navbar-brand', :style => 'padding:0; padding-top:7px') %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to('The Strahlen Story', story_path) %> </li>
          <li><%= link_to(fa_icon('facebook'), facebook_link, :target => '_blank') %> </li>
          <li><%= link_to(fa_icon('twitter'), twitter_link, :target => '_blank') %></li>
          <li><%= link_to(fa_icon('google-plus'), google_plus_link, :target => '_blank') %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>
  </div>

  <section id="sub-nav-container">
    <div>
      <% if content_for(:additional_nav) %>
          <%= yield(:additional_nav) %>
      <% end %>
    </div>
  </section>
</div>




